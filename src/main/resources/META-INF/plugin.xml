<idea-plugin>
  <id>com.chriscarini.jetbrains.rust-analyzer-lsp-intellij-plugin</id>

  <name>rust-analyzer LSP</name>

  <vendor email="jetbrains@chriscarini.com" url="https://jetbrains.chriscarini.com">Chris Carini</vendor>

  <description><![CDATA[
    rust-analyzer LSP-based plugin for IntelliJ-based IDEs.
  ]]></description>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.lsp</depends>

  <extensions defaultExtensionNs="com.intellij">

    <notificationGroup id="rust-analyzer LSP"
        displayType="BALLOON"/>

    <applicationService
        serviceImplementation="com.chriscarini.jetbrains.rustanalyzerlspintellijplugin.RustAnalyzerSettings"/>

    <applicationConfigurable
        parentId="tools"
        instance="com.chriscarini.jetbrains.rustanalyzerlspintellijplugin.RustAnalyzerSettingsConfigurable"
        id="com.chriscarini.jetbrains.rustanalyzerlspintellijplugin.RustAnalyzerSettingsConfigurable"
        displayName="rust-analyzer LSP"/>

    <platform.lsp.serverSupportProvider
        implementation="com.chriscarini.jetbrains.rustanalyzerlspintellijplugin.RustAnalyzerLspServerSupportProvider"/>

    <pluginReplacement
        implementation="com.chriscarini.jetbrains.rustanalyzerlspintellijplugin.RustAnalyzerLspPluginReplacement"/>

  </extensions>
</idea-plugin>